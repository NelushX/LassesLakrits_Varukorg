<% if(token) { %> <%- include("userprofile/headermember.ejs") %> <% } 
 else { %> <%- include("header.ejs") %> <% } %>

<div class="container mypage">
	<div class="row justify-content-center py-2">
		<h3 class="shoppingcart-title">Din Varukorg</h3>
	</div>

	<div class="container thecontainer">
		<div class="row justify-content-center">
			<div class="text-center">
				<% if(user.wishlist < 1){ %>
				<p>Din varukorg är tom</p>
				<% } %>

				<ul class="wishlist ">
					<% user.wishlist.forEach( (candy)=>{ %>
					<li class="wishlistItem">
						<a href="/allproducts/<%=candy.candyId.name %>">
							<p><%= candy.candyId.name %></p>
						</a>
						<p><%= candy.candyId.price %> kr </p>
						<div>
							<a href="/allproducts/<%=candy.candyId.name %>"><img src="<%= candy.candyId.img %>"
									alt="Bild på lakrits" class="hover wishlistImg"></a>
						</div>
						<a href="/deleteWishlist/<%= candy.candyId._id%>"><button style="margin-top: 10px;" type="button"
							class="btn btn-outline-dark wishlistButton">Ta bort från listan</button></a>
					</li>
					<% } ) %>
				</ul>
			</div>
		</div>
	</div>

  <div class="row justify-content-center pt-2">
    <h3 class="checkout-information-title">Din Information</h3>
  </div>
  <div class="row justify-content-center pt-2">
    <div class="col-sm-12 col-lg-6 text-center">
      <button type="submit" class="btn btn-dark w-100">Logga in</button>
      <a href="/signup">Har du inget konto?</a>
    </div>
  </div>
  <form action="./thank_you_page.html" class="needs-validation" novalidate>
    <section class="orderForm my-4 mx-4">
      <div class="container pt-4">
        <div class="row">
          <!--Form header-->
          <div class="col-12">
            <h1>Mina uppgifter</h1>
            <hr class="mt-1">
          </div>
          <!--Form header END-->
          <!--Pesonal details form-->
          <div class="col-12">
            <div class="row mx-4">
              <div class="col-12 mb-2">
              </div>
              <div class="col-12 col-md-6">
                <input class="form-control order-form-input" placeholder="Förnamn" required>
                <div class="invalid-feedback">
                  Skriv in ditt förnamn.
                </div>
                <div class="valid-feedback">
                  Tack!
                </div>
              </div>
              <div class="col-12 col-md-6">
                <input class="form-control order-form-input" placeholder="Efternamn" required>
                <div class="invalid-feedback">
                  Skriv in ditt efternamn.
                </div>
                <div class="valid-feedback">
                  Tack!
                </div>
              </div>
              <div class="col-12 col-md-6 mt-2">
                <input type="email" class="form-control order-form-input" placeholder="Email" required>
                <div class="invalid-feedback">
                  Lägg till din email.
                </div>
                <div class="valid-feedback">
                  Tack!
                </div>
              </div>
              <div class="col-12 col-md-6 mt-2">
                <input class="form-control order-form-input" placeholder="Mobilnummer" required>
                <div class="invalid-feedback">
                  Lägg till ditt mobilnummer.
                </div>
                <div class="valid-feedback">
                  Tack!
                </div>
              </div>
              <div class="col-12 mt-2">
                <input class="form-control order-form-input" placeholder="Adress" required>
                <div class="invalid-feedback">
                  Lägg till din adress.
                </div>
                <div class="valid-feedback">
                  Tack!
                </div>
              </div>
              <div class="col-12 col-sm-6 col-md-4 mt-2 pr-sm-2 pr-md-2">
                <input class="form-control order-form-input" placeholder="Postnummer" required>
                <div class="invalid-feedback">
                  Lägg till ditt postnummer.
                </div>
                <div class="valid-feedback">
                  Tack!
                </div>
              </div>
              <div class="col-12 col-sm-6 col-md-4 mt-2 pl-sm-0 p-md-0">
                <input class="form-control order-form-input" placeholder="Stad" required>
                <div class="invalid-feedback">
                  Lägg till staden som du bor i.
                </div>
                <div class="valid-feedback">
                  Tack!
                </div>
              </div>
              <div class="col-12 col-sm-6 col-md-4 mt-2 pl-md-2">
                <input class="form-control order-form-input" placeholder="Land" required>
                <div class="invalid-feedback">
                  Lägg till det landet som du bor i.
                </div>
                <div class="valid-feedback">
                  Tack!
                </div>
              </div>
            </div>
          </div>
        </div>
        <!--Personal details END-->
      </div>
    </section>
    <!--Form details END-->
    <!--Payment form-->
    <section class="orderForm my-4 mx-4">
      <div class="container pt-4">
        <div class="cardDetailsContainer">
          <h3>Betalningsmetod</h3>
          <span>Vi tar bara emot kortbetalning.</span>
          <hr>
          <div class="row mt-3 mx-4">
            <div class="col-12">
              <label class="order-form-label">Kortuppgifter</label>
            </div>
            <div class="col-12">
              <input class="form-control order-form-input" placeholder="Kortinnehavarens namn" required>
              <div class="invalid-feedback">
                Lägg till kortinnehavarens namn.
              </div>
              <div class="valid-feedback">
                Tack!
              </div>
            </div>
            <div class="col-9 mt-2">
              <input class="form-control order-form-input" placeholder="Kortnummer" required>
              <div class="invalid-feedback">
                Lägg till kortnumret.
              </div>
              <div class="valid-feedback">
                Tack!
              </div>
            </div>
            <div class="col-3 p-0">
              <i class="fab fa-cc-mastercard fa-3x"></i>
              <i class="fab fa-cc-visa fa-3x"></i>
            </div>
            <div class="col-12 col-sm-6 col-md-4 mt-2 pr-sm-2 pr-md-2">
              <input class="form-control order-form-input" placeholder="Utgångsmånad" required>
              <div class="invalid-feedback">
                Lägg till kortets utgångsmånad.
              </div>
              <div class="valid-feedback">
                Tack!
              </div>
            </div>
            <div class="col-12 col-sm-6 col-md-4 mt-2 pl-sm-0 p-md-0">
              <input class="form-control order-form-input" placeholder="Utgångsår" required>
              <div class="invalid-feedback">
                Lägg till kortets utgångsår.
              </div>
              <div class="valid-feedback">
                Tack!
              </div>
            </div>
            <div class="col-12 col-sm-6 col-md-4 mt-2 pl-md-2">
              <input class="form-control order-form-input" placeholder="CVV" required>
              <div class="invalid-feedback">
                Lägg till din CVV kod.
              </div>
              <div class="valid-feedback">
                tack!
              </div>
            </div>
          </div>
        </div>
        <div class="row mt-3 mx-4">
          <div class="col-12">
            <div class="form-check">
              <input type="checkbox" class="form-check-input" name="validation" id="validation" value="1" required>
              <label for="validation" class="form-check-label">Jag accepterar Lasses Laktits användarvillkor.</label>
            </div>
          </div>
        </div>

        <div class="row mt-3">
          <div class="col-12">
            <button type="submit" class="btn btn-dark d-block mx-auto btn-submit">Beställ</button>
          </div>
        </div>
      </div>
    </section>
  </form>
  <!--Payment form END-->
</div>
<%- include("footer.ejs") %>